{% extends 'base.html.twig' %}

{% block title property.title %}


{% block body %}

  <div class="jumbotron">
    <div class="container">
      <div class="row">
        <div class="col-md-8"></div>

        <div class="col-md-4">
          <h1>{{ property.title }}</h1>
          <h2>{{ property.rooms }} rooms - {{ property.surface }} m2</h2>
          <div class="text-primary" style="font-size: 3rem;font-weight: bold;">{{ property.formatedPrice }} CHF</div>
          <a href="#" class="btn btn-primary">Contact the agency</a>
        </div>

      </div> <!-- end row -->
    </div> <!-- end container -->
  </div> <!-- end jumbotron -->

  <div class="container mt-4">
    <p>
      {{ property.description | nl2br }}
    </p>

    <div class="row">
      <div class="col-md-8">
        <h2>Specifications</h2>
        <table class="table table-striped">
          <tr>
            <td>Surface</td>
            <td>{{ property.surface }} m2</td>
          </tr>
          <tr>
            <td>Rooms</td>
            <td>{{ property.rooms }}</td>
          </tr>
          <tr>
            <td>Bedrooms</td>
            <td>{{ property.bedrooms }}</td>
          </tr>
          <tr>
            <td>Floor</td>
            <td>{{ property.floor }}</td>
          </tr>
          <tr>
            <td>Heat</td>
            <td>{{ property.heatType }}</td>
          </tr>
        </table>
      </div> <!-- end col-md-8 -->

      <div class="col-md-4">
          <h2>Features</h2>
      </div>
    </div> <!-- end row -->
  </div> <!-- end container -->

{% endblock %}
